{
    "name": "xescodinghelper",
    "private": true,
    "type": "module",
    "module": "./src/index.ts",
    "scripts": {
        "dev": "bun run --watch src/index.ts",
        "build:css": "tailwindcss -i ./src/lib/webui/style.css -o ./src/lib/webui/styles.gen.css --minify",
        "build": "bun build src/index.ts --compile --bytecode --outfile xes_coding_helper --production --minify-whitespace --minify-syntax --minify-identifiers"
    },
    "devDependencies": {
        "@types/bun": "^1.3.9",
        "@types/react": "^19.2.14",
        "@types/react-dom": "^19.2.3"
    },
    "peerDependencies": {
        "typescript": "latest"
    },
    "dependencies": {
        "@tailwindcss/cli": "^4.2.1",
        "bun-plugin-tailwind": "^0.1.2",
        "react": "^19.2.4",
        "react-dom": "^19.2.4",
        "tailwindcss": "^4.2.1"
    }
}
